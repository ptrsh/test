# Docker Environment Variables for Testing

# Database (для подключения внутри Docker)
DATABASE_URL=postgresql://reviews_user:reviews_password@db:5432/reviews_db

# RuStore API - тестовые значения (замените на реальные)
RUSTORE_API_URL=https://api.rustore.ru
RUSTORE_CLIENT_ID=your_real_client_id_here
RUSTORE_CLIENT_SECRET=your_real_client_secret_here

# LLM API - тестовые значения (замените на реальные)
LLM_API_URL=https://api.openai.com/v1
LLM_API_KEY=your_real_llm_api_key_here

# Metrics API (опционально)
METRICS_API_URL=https://metrics.example.com
METRICS_API_KEY=your_metrics_api_key_here

# Flask
FLASK_ENV=development
SECRET_KEY=dev_secret_key_change_in_production_please
PORT=5000

# Database credentials (для внешнего подключения к БД)
POSTGRES_DB=reviews_db
POSTGRES_USER=reviews_user
POSTGRES_PASSWORD=reviews_password